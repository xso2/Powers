<%#= render "shared/second-header"%>


<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<div class ="contents">
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      会員情報入力
    </h1>
  </div>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">ニックネーム ※</label>
      <span class="indispensable"></span>
    </div>
    <%= f.text_field :name, class:"form-text", id:"name", placeholder:"例) アーノルド", maxlength:"40" %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス  ※</label>
      <span class="indispensable"></span>
    </div>
    <%= f.email_field :email, class:"form-text", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード  ※</label>
      <span class="indispensable"></span>
    </div>
    <%= f.password_field :password, class:"form-text", id:"password", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)  ※</label>
      <span class="indispensable"></span>
    </div>
    <%= f.password_field :password_confirmation, class:"form-text", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>
  
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">プロフィール</label>
      <span class="indispensable"></span>
    </div>
    <%= f.text_area :profile, class:"form-text", id:"name", placeholder:"意気込み・トレーニング歴など", maxlength:"40" %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">年齢  ※</label>
      <span class="indispensable"></span>
    </div>
    <%= f.text_field :age, class:"form-text", id:"age", placeholder:"例) 24", autofocus: true %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">身長  ※</label><br>
      <span class="indispensable">(数字のみ可・小数第一位まで可)</span>
    </div>
    <%= f.text_field :height, class:"form-text", id:"height", placeholder:"例) 175.5", autofocus: true %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">体重  ※</label><br>
      <span class="indispensable"> (数字のみ可・小数第一位まで可)</span>
    </div>
    <%= f.text_field :weight, class:"form-text", id:"weight", placeholder:"例) 68.2", autofocus: true %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">体脂肪率</label>
      <span class="indispensable"></span>
    </div>
    <%= f.text_field :body_fat_percentage, class:"form-text", id:"body_fat_percentage", placeholder:"例) 15", autofocus: true %>
  </div>


  <div class='register-btn'>
    <%= f.submit "会員登録" ,class:"button-gradation", style:"margin-top: 20px" %>
  </div>
</div>
</div>
<% end %>

