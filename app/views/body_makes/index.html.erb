<div class="contents">
  <div class="col-2">
    <%= render partial: "form", locals: { body_make: @body_make }, class:"bodymake-form" %> 
    <ul class="post card-list">
      <%# <% if user_signed_in? && current_user.id == @body_make.id %> 
        <% @body_makes.each do |body_make| %>
        <li>
            <div class='body_make-img-content'>
              <h2><%#= body_make.user.name %></h2>
              <h3><%= body_make.weight %>kg</h3>
              <%= body_make.start_time.strftime("%Y年%m月%d日")%>
              <p><%= body_make.text %></p>
                <% if body_make.image.present? %>
                <%= image_tag body_make.image, class: "body-make-img" %>
                <% else %>
                <%= image_tag 'DSC_1924-1024x683.jpeg', class: "body-make-img"%>
              <% end %><!-- link_to body_make_path -->
            </div>
        </li>
        <%# <% end %> 
      <% end %>
    </ul>
  </div>
</div>